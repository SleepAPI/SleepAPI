{
  "name": "sleep-api",
  "version": "2.3.0",
  "private": true,
  "main": "app.ts",
  "scripts": {
    "clean": "rimraf dist",
    "prebuild": "npm install && npm run clean",
    "build": "tsc && tsc-alias && tsoa spec",
    "postbuild": "copyfiles -u 1 src/**/*.html src/**/*.css src/**/**/*.json src/**/*.png src/assets/* src/assets/**/* dist/",
    "prebuild-watch": "npm run build",
    "build-watch": "concurrently \"tsc -w\" \"tsc-alias -w\"",
    "start": "npm run build && node ./dist/app.js",
    "predev": "npm run build",
    "dev": "concurrently -k -n \"Build,Backend\" -c \"yellow.bold,cyan.bold\" \"npm:build-watch\" \"npm:dev-start\"",
    "dev-start": "nodemon --delay 3 --watch dist dist/app.js -- -P -l debug --debug --debug-port=9230",
    "frontend": "npm run postbuild && node dist/app.js",
    "test": "jest --coverage",
    "test-watch": "jest --watch",
    "lint": "npm run eslint-check && npm run prettier-check",
    "lint-fix": "npm run eslint-fix && npm run prettier-fix",
    "eslint-check": "eslint src",
    "eslint-fix": "npm run eslint-check -- --fix",
    "prettier-check": "prettier --check .",
    "prettier-fix": "prettier --write ."
  },
  "files": [
    "dist"
  ],
  "devDependencies": {
    "@types/cors": "^2.8.15",
    "@types/express": "^4.17.20",
    "@types/jest": "^29.5.11",
    "@types/morgan": "^1.9.7",
    "@types/node": "^20.11.20",
    "@types/swagger-ui-express": "^4.1.5",
    "@typescript-eslint/eslint-plugin": "^5.59.6",
    "@typescript-eslint/parser": "^5.59.6",
    "concurrently": "^8.2.2",
    "copyfiles": "^2.4.1",
    "eslint": "^8.40.0",
    "jest": "^29.5.0",
    "nodemon": "^3.0.1",
    "prettier": "2.8.8",
    "rimraf": "^5.0.5",
    "sleepapi-common": "file:../common",
    "sqlite3": "^5.1.6",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.8",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "@sinclair/typebox": "^0.31.22",
    "@types/swagger-jsdoc": "^6.0.2",
    "cookie-parser": "~1.4.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "knex": "^3.0.1",
    "morgan": "~1.9.1",
    "mysql2": "^3.6.2",
    "sharp": "^0.33.2",
    "swagger-ui-express": "^5.0.0",
    "tsoa": "^6.0.1"
  },
  "bundleDependencies": [
    "sleepapi-common"
  ]
}
