{
  "name": "sleep-api",
  "version": "5.0.0",
  "private": true,
  "main": "dist/app.js",
  "scripts": {
    "clean": "rm -rf ./dist/",
    "prebuild": "npm run clean && npm run swagger && tsoa spec",
    "build": "tsc",
    "postbuild": "copyfiles -u 1 src/**/*.html src/**/*.css src/**/**/*.json src/**/*.png src/assets/* src/assets/**/* dist/",
    "start": "npm run build && node ./dist/app.js",
    "predev": "npm run build",
    "dev": "concurrently \"nodemon\" \"nodemon -x tsoa spec\"",
    "test": "jest --coverage",
    "test-watch": "jest --watch",
    "swagger": "tsoa spec",
    "lint": "npm run eslint-check && npm run prettier-check",
    "lint-fix": "npm run eslint-fix && npm run prettier-fix",
    "eslint-check": "eslint src",
    "eslint-fix": "npm run eslint-check -- --fix",
    "prettier-check": "prettier --check .",
    "prettier-fix": "prettier --write ."
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": "ts",
    "exec": "ts-node src/app.ts"
  },
  "devDependencies": {
    "@types/cors": "^2.8.15",
    "@types/express": "^4.17.20",
    "@types/jest": "^29.5.11",
    "@types/morgan": "^1.9.7",
    "@types/node": "^18.18.6",
    "@types/swagger-ui-express": "^4.1.5",
    "@typescript-eslint/eslint-plugin": "^5.59.6",
    "@typescript-eslint/parser": "^5.59.6",
    "concurrently": "^8.2.2",
    "copyfiles": "^2.4.1",
    "eslint": "^8.40.0",
    "jest": "^29.5.0",
    "nodemon": "^3.0.1",
    "prettier": "2.8.8",
    "sqlite3": "^5.1.6",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "@sinclair/typebox": "^0.31.22",
    "@types/ejs": "^3.1.4",
    "@types/swagger-jsdoc": "^6.0.2",
    "cookie-parser": "~1.4.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "ejs": "~3.1.7",
    "express": "~4.16.1",
    "knex": "^3.0.1",
    "morgan": "~1.9.1",
    "mysql2": "^3.6.2",
    "swagger-express-ts": "^1.1.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "tsoa": "^5.1.1"
  }
}
