{
  "extends": ["@vue/tsconfig/tsconfig.dom.json", "@tsconfig/node20/tsconfig.json"],
  "include": ["src/**/*"],

  "noImplicitThis": true,
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "bundler",

    "skipLibCheck": true,
    "composite": true,
    "resolveJsonModule": true,
    "noEmit": true,

    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "types": ["node", "jsdom", "vitest/globals"]
  }
}
