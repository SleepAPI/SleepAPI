{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",

    // rules
    "lib": ["ESNext", "DOM"],
    "esModuleInterop": true,
    "noImplicitAny": true,
    "skipLibCheck": true,

    // paths
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "declaration": true,
    "paths": {
      "src/*": ["./src/*"]
    },

    // types
    "types": ["vitest/globals"]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["dist/"]
}
