{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["ESNext", "DOM"],
    "noImplicitAny": true,
    "outDir": "dist",
    "sourceMap": true,
    "baseUrl": ".",
    "declaration": true,
    "skipLibCheck": true,
    "moduleResolution": "Bundler",
    "types": ["vitest/globals"],
    "paths": {
      "src/*": ["./src/*"],
      "test/*": ["./test/*"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["dist/"]
}
